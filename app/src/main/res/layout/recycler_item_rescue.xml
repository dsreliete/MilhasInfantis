<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:padding="8dp"
            android:id="@+id/rescue_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/medal_icon"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/description_awardsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/points_awardsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_awardsTextView"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/rescue_button"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:text="Resgatar"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_orange"/>

    </LinearLayout>
</LinearLayout>